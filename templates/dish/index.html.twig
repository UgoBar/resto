{% extends 'base.html.twig' %}

{% block title %}Dish index{% endblock %}

{% block body %}

    <h1 class="text-center text-uppercase">Produits</h1>

    <a class="btn btn-primary" href="{{ path('app_dish_new') }}">Create new</a>

    {% for category in categories %}
        <div class="category mt-4">
            <h2>{{ category.name }}</h2>
            <hr>
            {% for dish in category.dishes %}
                <div class="card" style="width: 18rem;">
                    <img src="{{ dish.image }}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{ dish.name }}</h5>
                        <p class="card-text">{{ dish.description }}</p>
                        <a class="btn btn-primary" href="{{ path('app_dish_edit', {'id': dish.id}) }}">edit</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endfor %}
