{% extends 'base.html.twig' %}

{% block title %}Dish{% endblock %}

{% block body %}
    <h1>Dish</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ dish.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ dish.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ dish.image }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ dish.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ dish.price }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ dish.createdAt ? dish.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ dish.updatedAt ? dish.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_dish_index') }}">back to list</a>

    <a href="{{ path('app_dish_edit', {'id': dish.id}) }}">edit</a>

